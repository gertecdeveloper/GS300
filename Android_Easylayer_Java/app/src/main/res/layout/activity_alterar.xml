<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@color/white"
    tools:context=".Sat.Alterar">

    <TextView
        android:id="@+id/title_alterar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="34dp"
        android:text="ALTERAR DE CÓDIGO DE ATIVAÇÃO"
        android:textAlignment="center"
        android:textColor="@color/azulGertec"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Spinner1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="245dp"
        android:layout_marginEnd="24dp"
        android:text="Opções"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Spinner1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Spinner1" />

    <Button
        android:id="@+id/buttonAlterar"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Associar"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtCodConfirmar"
        app:layout_constraintTop_toBottomOf="@+id/txtCodConfirmar"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/Spinner1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCodAtual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/title_alterar"
        tools:targetApi="p" />

    <EditText
        android:id="@+id/txtCodAtual"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="95dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_list"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtCodNovo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/Spinner1">

    </EditText>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="51dp"
        android:text="Confirmar"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAlterar"
        app:layout_constraintEnd_toStartOf="@+id/txtCodConfirmar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="38dp"
        android:text="Atual"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/txtCodAtual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spinner1" />

    <EditText
        android:id="@+id/txtCodConfirmar"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="95dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/shape_list"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonAlterar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/txtCodNovo"></EditText>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="61dp"
        android:text="Novo"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtCodConfirmar"
        app:layout_constraintEnd_toStartOf="@+id/txtCodNovo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCodAtual" />

    <EditText
        android:id="@+id/txtCodNovo"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="95dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/shape_list"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtCodConfirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/txtCodAtual"></EditText>


</androidx.constraintlayout.widget.ConstraintLayout>
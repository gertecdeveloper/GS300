<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sat.Teste">

    <TextView
        android:id="@+id/title_teste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TESTE DO SAT"
        android:textAlignment="center"
        android:textColor="@color/azulGertec"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="88dp"
        android:text="Código de Ativação SAT: "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCodAtivacao"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/shape_list"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/title_teste" />


    <Button
        android:id="@+id/buttonConsultar"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Consultar SAT"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodAtivacao" />

    <Button
        android:id="@+id/buttonStatus"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Status operacional"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConsultar" />

    <Button
        android:id="@+id/buttonFimaFim"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/azulGertec"
        android:text="TESTE FIM A FIM"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStatus"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonCancelamento"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Cancelar venda"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/buttonStatus"
        app:layout_constraintTop_toBottomOf="@+id/buttonTesteVenda" />

    <Button
        android:id="@+id/buttonTesteVenda"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Enviar dados de venda"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toEndOf="@+id/buttonConsultar"
        app:layout_constraintTop_toBottomOf="@+id/title_teste" />

    <Button
        android:id="@+id/buttonConsultarSessao"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/azulGertec"
        android:text="Consultar sessão"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/buttonFimaFim"
        app:layout_constraintTop_toBottomOf="@+id/buttonCancelamento" />

    <EditText
        android:id="@+id/txtRetorno"
        android:layout_width="510dp"
        android:layout_height="57dp"
        android:layout_marginBottom="36dp"
        android:autoText="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:duplicateParentState="false"
        android:editable="false"
        android:fadeScrollbars="true"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine|textImeMultiLine"
        android:nestedScrollingEnabled="true"
        android:scrollHorizontally="true"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".impressora.Printer">


    <TextView
        android:id="@+id/txtImpressora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Impressora"
        android:textColor="@color/azul2"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/btImage"
        app:layout_constraintEnd_toEndOf="@id/btCupom"
        app:layout_constraintStart_toStartOf="@id/btImage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btImage"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/txtImpressora"
        android:layout_marginStart="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/blue_bt"
        android:gravity="center"
        android:text="Imprimir imagem"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btCupom"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCupom"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/btImage"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/blue_bt"
        android:gravity="center"
        android:text="Imprimir Cupom"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btImprimirQRCode"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/btCupom"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/blue_bt"
        android:gravity="center"
        android:text="Imprimir Qr Code"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btImprimirCodeBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="300dp"
        android:text="Imprimir CÃ³digo de barras"
        android:textSize="25dp"
        android:background="@drawable/blue_bt"
        android:gravity="center"
        android:layout_below="@id/btImprimirQRCode" />

</RelativeLayout>
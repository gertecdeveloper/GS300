<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/gertec" />

    <!-- Informações -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/infor"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@id/imgLogo"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/outfitbold"
        android:gravity="center"
        android:text="@string/informacoes"
        android:textColor="@color/azul"
        android:textSize="10sp" />

    <!-- Linha divisória -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/infor"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp"
        android:background="@color/amarelo" />

    <!-- Botões -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/infor"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Primeira linha de botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn2Display"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_display"
                    android:fontFamily="@font/outfitbold"
                    android:text="Segundo display"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNfc"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_nfc"
                    android:fontFamily="@font/outfitbold"
                    android:text="Nfc"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPrinter"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_print"
                    android:fontFamily="@font/outfitbold"
                    android:text="Impressão"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Segunda linha de botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSpeaker"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_speaker"
                    android:fontFamily="@font/outfitbold"
                    android:text="àudio descrição"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSat"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_sat"
                    android:fontFamily="@font/outfitbold"
                    android:text="sat"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTef"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_tef"
                    android:fontFamily="@font/outfitbold"
                    android:text="Tef"
                    android:textColor="@color/azul2"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Segunda linha de botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBalanca"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_balance"
                    android:text="Balança"
                    android:fontFamily="@font/outfitbold"
                    android:textSize="20sp"
                    android:textColor="@color/azul2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGaveta"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_bt"
                    android:drawableStart="@drawable/ic_drawer"
                    android:text="gaveta"
                    android:fontFamily="@font/outfitbold"
                    android:textSize="20sp"
                    android:textColor="@color/azul2" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
